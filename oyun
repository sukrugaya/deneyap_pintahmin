int score = 0;  // Oyuncunun puanı

void setup() {
  // Başlangıçta seri haberleşmeyi başlat
  Serial.begin(9600);
  delay(5000);

  // Kullanıcıdan başlamak isteyip istemediğini al
  Serial.println("=== Pin Tahmin Oyunu ===");
  Serial.println("Oyun hakkında bilgi: Her 10 saniyede bir rastgele bir işlev adı belirlenir.");
  Serial.println("Siz de bu işlemin hangi pine ait olduğunu tahmin etmeye çalışın!");
  Serial.println("Oynamak için pin adını girerek Enter tuşuna basın...");
  delay(5000);
}

void correctGuess() {
  Serial.println("Tebrikler, doğru tahmin!");
  score++;
  Serial.println("Puan: " + String(score));
}

void wrongGuess(int randomIndex) {
  Serial.println("Maalesef, yanlış tahmin.");
  Serial.print("Doğru cevap: ");
  Serial.println(pinNames[randomIndex]);
  score = max(0, score - 1);
  Serial.println("Puan: " + String(score));
}

void loop() {
  // Oyun başlasın
  Serial.println("");
  Serial.println("Tahmin Et!");

  // Her 10 saniyede bir rastgele bir işlev seç
  int randomIndex = random(sizeof(functionNames) / sizeof(functionNames[0]));

  // Rastgele seçilen işlemin adını Serial Monitor'e yazdır
  Serial.print("\nRastgele Seçilen İşlev: ");
  Serial.println(functionNames[randomIndex]);

  // Kullanıcıdan pin tahmini al
  Serial.println("Bu işlev hangi pine ait? (Örn: D2): ");

  // Kullanıcının tahminini oku
  while (!Serial.available()) {
    // Bekle, kullanıcının girişini alana kadar devam et
  }
  String userGuess = Serial.readStringUntil('\n');

  // Kullanıcının tahminini kontrol et
  if (userGuess.equals(pinNames[randomIndex])) {
    correctGuess();
  } else {
    wrongGuess(randomIndex);
  }
Serial.println("10 Saniye Mola!");
  // 10 saniye bekle
  delay(10000);
}
